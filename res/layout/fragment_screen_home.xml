                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_next_class_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

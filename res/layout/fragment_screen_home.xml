<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container_home"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey_middle"
    android:orientation="vertical"
    android:paddingTop="10dp" >
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >
        
       <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="373dp"
            android:background="@color/grey_middle"
            android:orientation="vertical" >
            
            <LinearLayout
                android:id="@+id/next_class_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/white"
                android:onClick="toSchedule"
                android:orientation="vertical" >
                
                <RelativeLayout
			        android:id="@+id/relativeLayout1"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_marginRight="8dp"
			        android:animateLayoutChanges="true"
			        android:background="@color/white"
			        android:orientation="horizontal"
			        android:scrollbarAlwaysDrawVerticalTrack="true" >
			        
                    <TextView
			            android:id="@+id/list_course_time_start_end"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_alignParentTop="true"
			            android:layout_marginLeft="18dp"
			            android:layout_marginTop="12dp"
			            android:text="@string/test_time"
			            android:textAppearance="?android:attr/textAppearanceLarge"
			            android:textSize="20sp" />
                    
                    <TextView
			            android:id="@+id/list_course_building_id"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignLeft="@+id/list_course_time_start_end"
			            android:layout_below="@+id/list_course_time_start_end"
			            android:layout_marginBottom="10dp"
			            android:layout_marginLeft="4dp"
			            android:layout_marginTop="4dp"
			            android:text="" />
                    
                    <TextView
			            android:id="@+id/list_course_room_id"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignBaseline="@+id/list_course_building_id"
			            android:layout_alignBottom="@+id/list_course_building_id"
			            android:layout_marginLeft="4dp"
			            android:layout_toRightOf="@+id/list_course_building_id"
			            android:text="No room set"
			            android:textStyle="bold" />
                
                    <View
			            android:id="@+id/calendarColorFrame2"
			            android:layout_width="1dp"
			            android:layout_height="fill_parent"
			            android:layout_alignBottom="@+id/list_course_room_id"
			            android:layout_alignParentTop="true"
			            android:layout_marginLeft="10dp"
			            android:layout_marginTop="8dp"
			            android:layout_toRightOf="@+id/list_course_time_start_end"
			            android:background="@color/blue" />
                    
                    <TextView
			            android:id="@+id/list_course_coursename"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignBottom="@+id/calendarColorFrame2"
			            android:layout_alignParentRight="true"
			            android:layout_alignParentTop="true"
			            android:layout_marginLeft="10dp"
			            android:layout_marginRight="18dp"
			            android:layout_marginTop="12dp"
			            android:layout_toRightOf="@+id/calendarColorFrame2"
			            android:text="@string/coursename" />

          			<TextView
          			    android:id="@+id/list_course_date"
          			    android:layout_width="wrap_content"
          			    android:layout_height="wrap_content"
          			    android:layout_alignParentLeft="true"
          			    android:layout_alignLeft="@+id/list_course_time_start_end"
          			    android:layout_marginBottom="20dp"
          			    android:text="TestDate" />
                    
               	</RelativeLayout>
                
          	</LinearLayout>
          	
            <LinearLayout
                android:id="@+id/next_class_widget_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/white"
                android:onClick="toSchedule"
                android:orientation="vertical" >
                
                <RelativeLayout
			        android:id="@+id/relativeLayout2"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="8dp"
			        android:layout_marginRight="8dp"
			        android:animateLayoutChanges="true"
			        android:background="@color/white"
			        android:orientation="horizontal"
			        android:scrollbarAlwaysDrawVerticalTrack="true" >
                    
                <TextView
		            android:id="@+id/list_course_time_start_end2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:layout_alignParentTop="true"
		            android:layout_marginLeft="18dp"
		            android:layout_marginTop="12dp"
		            android:text="@string/test_time"
		            android:textAppearance="?android:attr/textAppearanceLarge"
		            android:textSize="20sp" />
                
                <TextView
		            android:id="@+id/list_course_building_id2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignLeft="@+id/list_course_time_start_end2"
		            android:layout_below="@+id/list_course_time_start_end2"
		            android:layout_marginBottom="10dp"
		            android:layout_marginLeft="4dp"
		            android:layout_marginTop="4dp"
		            android:text="" />
                
                <TextView
		            android:id="@+id/list_course_room_id2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignBaseline="@+id/list_course_building_id2"
		            android:layout_alignBottom="@+id/list_course_building_id2"
		            android:layout_marginLeft="4dp"
		            android:layout_toRightOf="@+id/list_course_building_id2"
		            android:text="No room set"
		            android:textStyle="bold" />
                
               <View
		            android:id="@+id/calendarColorFrame4"
		            android:layout_width="1dp"
		            android:layout_height="fill_parent"
		            android:layout_alignBottom="@+id/list_course_room_id2"
		            android:layout_alignParentTop="true"
		            android:layout_marginLeft="10dp"
		            android:layout_marginTop="8dp"
		            android:layout_toRightOf="@+id/list_course_time_start_end2"
		            android:background="@color/blue" />
                
               <TextView
		            android:id="@+id/list_course_coursename2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignBottom="@+id/calendarColorFrame4"
		            android:layout_alignParentRight="true"
		            android:layout_alignParentTop="true"
		            android:layout_marginLeft="10dp"
		            android:layout_marginRight="18dp"
		            android:layout_marginTop="12dp"
		            android:layout_toRightOf="@+id/calendarColorFrame4"
		            android:text="@string/coursename" />
               
               <TextView
		            android:id="@+id/textView1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=" " />
                    
              	</RelativeLayout>
                
           	</LinearLayout>
           	

            <RelativeLayout
                android:id="@+id/itslearning_widget"
                android:layout_width="wrap_content"
                android:layout_height="94dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/grey_middle"
                android:onClick="toITSL"
                android:orientation="vertical" >
                
	           	<ImageView
	                android:id="@+id/imageView1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                android:src="@drawable/its_icon" />  
                
           	</RelativeLayout>
            
           	<RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/grey_middle"
                android:orientation="vertical" >
            
            	<ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="fill_parent"
                    android:layout_height="340dp"
                    android:background="@color/grey_middle"
                    android:src="@drawable/instagram_frame" />    
                
            	<TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/instagramview"
                    android:layout_marginTop="30dp"
                    android:background="#666666"
                    android:text="#MAHStudent"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
                
					<ImageView
					    android:id="@+id/instagramview"
					    android:layout_width="255dp"
					    android:layout_height="255dp"
					    android:layout_centerHorizontal="true"
					    android:layout_centerVertical="true"
					    android:layout_weight="0.67"
					    android:background="@color/grey_dark"
					    android:padding="5dp"
					    android:scaleType="centerInside"
					    android:src="@drawable/loading" />

            </RelativeLayout>
            <!-- </com.handmark.pulltorefresh.library.PullToRefreshScrollView> -->

        </LinearLayout>
        
    </ScrollView>
    
</android.support.v4.widget.SwipeRefreshLayout>
